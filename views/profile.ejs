<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="page-header text-center mb-3">
      <h1 class="mb-5 ">Welcome to the 21 Savage Fan Club</h1>
  </div>
<div class="container d-flex">


    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="card p-2 bg-dark text-light">
          <h3 class="text-center">Messages</h3>
          <ul class="messages p-0">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message d-flex flex-row justify-content-between px-4">
              <div>
                <span class="name underline px-4"><%= messages[i].name %></span>
                <span class="msg"><%= messages[i].msg %></span>
              </div>
              <div>
                <span class="px-2"><%= messages[i].thumbUp %></span>
                <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
                <span class="px-2"><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
                <span class="pr-4"><i class="fa fa-ban" aria-hidden="true"></i></span>
              </div>
            </li>
          <% } %>
          </ul>
        </div>

          <h2 class="mt-3">Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" class="input-group" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <input type="text" placeholder="message" name="msg">
            <button type="submit" class="btn">Submit</button>
          </form>
        <% } %>
        <div class="mt-5">
          <div class="card bg-dark text-light p-5">
              <h3><span class="fa fa-user"></span> Local</h3>

              <% if (user.local.email) { %>
                  <p>
                      <strong>id</strong>: <%= user._id %><br>
                      <strong>email</strong>: <%= user.local.email %><br>
                      <strong>password</strong>: <%= user.local.password %>
                  </p>
                <div>
                  <a href="/unlink/local" class="btn btn-default">Unlink</a>
                  <a href="/logout" class="btn btn-default">Logout</a>
                </div>
              <% } else { %>
                <div>
                  <a href="/connect/local" class="btn btn-default">Connect Local</a>
                  <a href="/logout" class="btn btn-default">Logout</a>
                </div>
              <% } %>

          </div>
        </div>
      </div>
      <img  src="img/savage21.jpg" alt="21 Savage Profile Photo">
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>

<script src="main.js"></script>

</body>
</html>
